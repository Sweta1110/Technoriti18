<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/image_rel"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:background="@drawable/splash">

        </RelativeLayout>

        <TextView
            android:id="@+id/text_technoriti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_rel"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="34dp"
            android:text="TECHNORITI'18"
            android:textColor="@color/colorPrimary"
            android:textSize="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/text_technoriti"
            android:layout_below="@+id/text_technoriti"
            android:layout_marginEnd="16dp"
            android:text="-A new beginning"
            android:textColor="@android:color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_technoriti"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="31dp"
            android:text="Technoriti is annual Techno Management Fest of Bhagalpur College of Engineering. The fest is organised by the students of B.C.E Bhagalpur. The fest was first held in the year 2012 under the name AAGHAZ. The AAGHAZ was splendid and it changed into Technoriti in 2013. Technoriti is the amalgamation of two words, ‘Techno’ and ‘riti’. The term ‘Techno’ refers to technology, and ‘riti’ refers to cultural values and ethics. The eight-ten day fest kicks off with various techno-management events and finally ends with UMANG- The cultural night."
            android:textColor="@color/textcolordescription"
            android:textSize="18sp"
            android:padding="11dp"
            android:elevation="5dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/octagon_back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView2"
            android:layout_below="@+id/textView2"
            android:text="            BHAGALPUR COLLEGE OF ENGINEERING
                     P.O.: Sabour, Bhagalpur-813210
                     Ph.: 0641-2451063(0),
                     Fax: 0641-2451063,
                     Email: tpo_bcebgp@yahoo.co.in"
            android:textColor="@color/textcolordescription"
            android:textSize="17dp"
            android:layout_margin="16dp"
            android:layout_marginTop="20dp"/>


    </RelativeLayout>
</ScrollView>
