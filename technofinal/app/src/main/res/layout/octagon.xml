<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">

  <RelativeLayout
      android:layout_width="fill_parent"
      android:layout_height="fill_parent">

      <ImageView
          android:layout_width="300dp"
          android:layout_height="150dp"
          android:layout_alignParentTop="true"
          android:layout_centerHorizontal="true"
          android:src="@drawable/tech"
          android:id="@+id/imageView5" />


      <ImageView
          android:id="@+id/img1"
          android:layout_width="@dimen/octagon"
          android:layout_height="@dimen/octagon"
          android:layout_alignParentStart="true"
          android:layout_alignParentTop="true"
          android:src="@drawable/white"
          android:layout_centerVertical="true"
          android:layout_centerHorizontal="true"
          android:layout_marginTop="282dp"
          android:layout_below="@id/imageView7"
          android:layout_marginStart="135dp"/>
      <ImageView
          android:layout_width="@dimen/octagon"
          android:layout_height="@dimen/octagon"
          android:src="@drawable/white"
          android:layout_below="@id/img1"
          android:layout_marginStart="135dp"
          android:id="@+id/imageView6"
          android:layout_marginTop="12dp"
          />

      <ImageView
          android:layout_width="@dimen/octagon"
          android:layout_height="@dimen/octagon"
          android:layout_alignStart="@+id/img1"
          android:layout_below="@+id/imageView5"
          android:layout_marginTop="20dp"
          android:src="@drawable/white"
          android:id="@+id/imageView7"
          />

      <ImageView
          android:id="@+id/imageView9"
          android:layout_width="@dimen/octagon"
          android:layout_height="@dimen/octagon"
          android:layout_alignTop="@+id/imageView7"
          android:layout_marginTop="50dp"
          android:layout_toStartOf="@+id/imageView7"
          android:src="@drawable/white" />

      <ImageView
          android:id="@+id/imageView10"
          android:layout_width="@dimen/octagon"
          android:layout_height="@dimen/octagon"
          android:layout_alignStart="@+id/imageView9"
          android:layout_below="@+id/imageView9"
          android:src="@drawable/white"
          android:layout_marginTop="12dp"
          android:background="@drawable/octagon_back"/>

      <ImageView
          android:id="@+id/imageView11"
          android:layout_width="@dimen/octagon"
          android:layout_height="@dimen/octagon"
          android:layout_alignTop="@+id/imageView9"
          android:layout_toEndOf="@+id/img1"
          android:src="@drawable/white"
          android:background="@drawable/octagon_back"
          />

      <ImageView
          android:layout_width="@dimen/octagon"
          android:layout_height="@dimen/octagon"
          android:layout_alignStart="@+id/imageView11"
          android:layout_below="@+id/imageView11"
          android:src="@drawable/white"
          android:layout_marginTop="12dp"
          android:background="@drawable/octagon_back"/>


  </RelativeLayout>
</ScrollView>