<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="5dp"
        android:layout_margin="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/umangimage"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@drawable/robosoccer"
                android:scaleType="fitXY"
                />


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical"
                android:layout_below="@+id/umangimage"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/umangdesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="3dp"
                        android:textSize="18sp"
                        android:textColor="@color/textcolordescription"
                       android:text="Everyone loves SOCCER (football) , a game of action and suspense.Introducing RoboSoccer event based on Football. Design a Soccerbot with a pushing or hitting mechanism (acting as hand or leg). One which can move around and hit it to score goals of opposite team's goalpost.The main motive , is score as many goals as you can. The team which scores more goal wins.This needs a good control over your manual bot."/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/umangdesc"
                        android:textSize="20sp"
                        android:padding="3dp"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginTop="8dp"
                        android:text="Schedule:-"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/umangdesc"
                        android:textSize="20sp"
                        android:padding="3dp"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/textcolordescription"
                        android:text="@string/still_to_be_updated"
                        />
                    <Button
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="16dp"
                        android:textStyle="normal"
                        android:text="Register"
                        android:padding="5dp"
                        android:textSize="18dp"
                        android:id="@+id/register_robo"
                        android:textAllCaps="false"
                        android:textColor="@color/colorPrimary"/>
                    <Button
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"

                        android:layout_marginEnd="16dp"
                        android:textStyle="normal"
                        android:text="Rules"
                        android:padding="5dp"
                        android:textSize="18dp"
                        android:id="@+id/rule_robo"
                        android:textAllCaps="false"
                        android:textColor="@color/colorPrimary"/>

                  <!--  <TextView
                        android:id="@+id/rule_robo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginEnd="35dp"
                        android:padding="3dp"
                        android:text="Get Rules"
                        android:textColor="@color/textcolordescription"
                        android:textSize="15sp"
                        android:textStyle="normal" /> -->
                </LinearLayout>
            </ScrollView>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>